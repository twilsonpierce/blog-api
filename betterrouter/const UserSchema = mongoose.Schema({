const UserSchema = mongoose.Schema({
	name: {type:String,required:true},
	email: String,
	userName: String
})


//we will require this data within our sever.js file 

//thunk is  a way for you to make an ajax call in React-Redux



import React from 'react';
import $ from 'jQuery';

const Users = React.createClass({
	getInitialState(){
		return {users: []}
	},

	componentDidMount(){
		$.ajax({
			url:'/users',
			type: 'GET',
			success: (data) => {
				console.log(data, 'this is the data');
				this.setState({users:data})
			}
		})
	},

	render()
})